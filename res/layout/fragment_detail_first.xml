<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >    

    <ScrollView
        android:id="@+id/detailFirstScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <ImageView 
                android:id="@+id/detailCourseInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/one_courseinfo"/>
            
            <ImageView 
                android:id="@+id/detailCourseRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/one_spot"/>
            
            <ImageView 
                android:id="@+id/detailCourseStamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/one_stamp"/>
            
            <Button 
                android:id="@+id/btnGoStampMap"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/one_button_default"/>
            
            <ImageView 
                android:id="@+id/detailCourseTraffic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/one_traffic"
                android:layout_marginBottom="120dp"/>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
