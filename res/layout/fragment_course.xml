<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnCourse1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_one"/>

            <Button
                android:id="@+id/btnCourse2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_two"/>

            <Button
                android:id="@+id/btnCourse3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_three" />

            <Button
                android:id="@+id/btnCourse4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_four" />

            <Button
                android:id="@+id/btnCourse5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_five" />

            <Button
                android:id="@+id/btnCourse6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_six" />

            <Button
                android:id="@+id/btnCourse7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_seven" />

            <Button
                android:id="@+id/btnCourse8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_eight"
                android:layout_marginBottom="50dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnFullMap"
        android:layout_width="match_parent"
        android:layout_height="40dp"
		android:background="@drawable/main_map_button"
        android:layout_alignParentBottom="true" />

</RelativeLayout>